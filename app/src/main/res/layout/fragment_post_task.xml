<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:padding="35dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/postTaskHeaderContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/backToHomeBtn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/ic_baseline_back_arrow"
                    app:layout_constraintBottom_toBottomOf="parent"
                    style="@style/backArrow" />

                <TextView
                    android:id="@+id/postTaskLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Post Task"
                    android:textFontWeight="600"
                    android:textSize="25sp"
                    app:layout_constraintHorizontal_bias="0.514"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tvPostTaskTitleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/registerPageMargin"
                android:text="Task Title"
                android:fontFamily="@font/roboto"
                android:textSize="20sp"
                android:textFontWeight="500"
                app:layout_constraintTop_toBottomOf="@id/postTaskHeaderContainer"
                app:layout_constraintBottom_toTopOf="@id/etPostTaskTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="30dp"
                />

            <EditText
                android:id="@+id/etPostTaskTitle"
                style="@style/authInputText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/registerPageMargin"
                android:ems="10"
                android:hint="Cleaning"
                android:inputType="text"
                android:padding="15dp"
                app:layout_constraintTop_toBottomOf="@id/tvPostTaskTitleLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvPostTaskDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/registerPageMargin"
                android:text="Task Description"
                android:fontFamily="@font/roboto"
                android:textSize="20sp"
                android:textFontWeight="500"
                app:layout_constraintTop_toBottomOf="@id/etPostTaskTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/etPostTaskDescription"
                style="@style/authInputText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/registerPageMargin"
                android:ems="10"
                android:hint="@string/taskDescHint"
                android:inputType="text"
                android:padding="15dp"
                app:layout_constraintTop_toBottomOf="@id/tvPostTaskDescription"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvPostTaskDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/registerPageMargin"
                android:text="Date"
                android:fontFamily="@font/roboto"
                android:textSize="20sp"
                android:textFontWeight="500"
                app:layout_constraintTop_toBottomOf="@id/etPostTaskDescription"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/datePickerContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPostTaskDate"
                android:layout_marginTop="@dimen/registerPageMargin"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/authInputText"
                android:padding="12dp"
                >

                <TextView
                    android:id="@+id/dateHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/inputHint"
                    android:textSize="16sp"
                    android:textFontWeight="200"
                    android:fontFamily="@font/roboto"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <Button
                    android:id="@+id/calendarIcon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_calendar"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="@dimen/registerPageMargin"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tvTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/registerPageMargin"
                android:text="Time"
                android:fontFamily="@font/roboto"
                android:textSize="20sp"
                android:textFontWeight="500"
                app:layout_constraintTop_toBottomOf="@id/datePickerContainer"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/timePickerContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTimeLabel"
                android:layout_marginTop="@dimen/registerPageMargin"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/authInputText"
                android:paddingVertical="15dp"
                android:paddingHorizontal="12dp"
                >

                <TextView
                    android:id="@+id/timeHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text=""
                    android:textColor="@color/inputHint"
                    android:textSize="16sp"
                    android:textFontWeight="200"
                    android:fontFamily="@font/roboto"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <Button
                    android:id="@+id/timePickerBtn"
                    android:layout_width="30dp"
                    android:layout_height="0dp"
                    android:background="@drawable/ic_down_arrow"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="@dimen/registerPageMargin"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tvUploadPictureLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/registerPageMargin"
                android:text="Upload Picture"
                android:fontFamily="@font/roboto"
                android:textSize="20sp"
                android:textFontWeight="500"
                app:layout_constraintTop_toBottomOf="@id/timePickerContainer"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/uploadPictureContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvUploadPictureLabel"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginVertical="@dimen/registerPageMargin">

                <ImageView
                    android:id="@+id/selectedImageView"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:contentDescription="Selected Image Preview"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@color/grayBtnBg" />

                <Button
                    android:id="@+id/uploadImgBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/ic_upload_from_device"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/submitTaskBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/uploadPictureContainer"
                android:layout_marginTop="30dp"
                style="@style/authBtnBlue"
                android:text="Submit Task"
                android:elevation="10dp"
                android:textAllCaps="false"
                android:padding="12dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Loading Overlay -->
    <RelativeLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/semi_transparent_black">

        <!-- Circular ProgressBar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>
</FrameLayout>