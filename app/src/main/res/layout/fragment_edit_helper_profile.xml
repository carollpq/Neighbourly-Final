<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/editHelperProfileTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Helper Profile"
                android:textStyle="bold"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="30dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/editHelperProfileBackBtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_baseline_back_arrow"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="30dp" />

            <TextView
                android:id="@+id/tvEditHelperAboutMeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/registerPageMargin"
                android:text="About Me"
                android:fontFamily="@font/roboto"
                android:textSize="20sp"
                android:textFontWeight="500"
                app:layout_constraintTop_toBottomOf="@id/editHelperProfileTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginStart="15dp"
                />

            <EditText
                android:id="@+id/etEditHelperAboutMe"
                style="@style/authInputText"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/registerPageMargin"
                android:ems="10"
                android:text="Tell the world what you can offer!!"
                android:gravity="top"
                android:inputType="text"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                app:layout_constraintTop_toBottomOf="@id/tvEditHelperAboutMeLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="15dp"/>

            <TextView
                android:id="@+id/tvEditSkillsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/registerPageMargin"
                android:text="Skills"
                android:fontFamily="@font/roboto"
                android:textSize="20sp"
                android:textFontWeight="500"
                app:layout_constraintTop_toBottomOf="@id/etEditHelperAboutMe"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginStart="15dp"
                />

            <EditText
                android:id="@+id/etEditSkills"
                style="@style/authInputText"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/registerPageMargin"
                android:ems="10"
                android:text="List your all of your skills and services"
                android:gravity="top"
                android:inputType="text"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                app:layout_constraintTop_toBottomOf="@id/tvEditSkillsLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="15dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/editHelperProfileSaveBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etEditSkills"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="15dp"
                android:text="Save"
                android:textAllCaps="false"
                style="@style/authBtnBlue" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <!-- Loading View -->
    <RelativeLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/semi_transparent_black">

        <!-- Circular ProgressBar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>


</FrameLayout>